<?xml version="1.0" encoding="UTF-8"?>
<project name="locate" default="all">
  
  
  <property file="locate.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="compiler.excluded">
    <exclude name="${basedir}/Tests/src/pl/towelrail/locate/MainActivityTest.java"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.android_2.2_platform" value="${jdk.home.android_2.2_platform}/../../../../../Library/Java/JavaVirtualMachines/jdk1.7.0_40.jdk/Contents/Home/bin"/>
  <path id="jdk.classpath.android_2.2_platform">
    <fileset dir="${jdk.home.android_2.2_platform}">
      <include name="platforms/android-8/android.jar"/>
      <include name="platforms/android-8/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="jdk.bin.android_4.3_platform" value="${jdk.home.android_4.3_platform}/../../../../../Library/Java/JavaVirtualMachines/jdk1.7.0_40.jdk/Contents/Home/bin"/>
  <path id="jdk.classpath.android_4.3_platform">
    <fileset dir="${jdk.home.android_4.3_platform}">
      <include name="platforms/android-18/android.jar"/>
      <include name="platforms/android-18/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.android_4.3_platform}"/>
  <property name="project.jdk.bin" value="${jdk.bin.android_4.3_platform}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.android_4.3_platform"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.com.github.kevinsawicki:http-request:5.5.classpath">
    <pathelement location="${basedir}/lib/http-request-5.5.jar"/>
  </path>
  
  <path id="library.com.google.code.gson:gson:2.2.4.classpath">
    <pathelement location="${basedir}/lib/gson-2.2.4.jar"/>
  </path>
  
  <path id="library.com.j256.ormlite:ormlite-android:4.9.classpath">
    <pathelement location="${basedir}/lib/ormlite-android-4.9.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/../sdk/extras/google/google_play_services/libproject/google-play-services_lib/module_google-play-services_lib.xml"/>
  
  <import file="${basedir}/module_locate.xml"/>
  
  <import file="${basedir}/Tests/module_tests.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.google-play-services_lib, clean.module.locate, clean.module.tests" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.google-play-services_lib, compile.module.locate, compile.module.tests" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>