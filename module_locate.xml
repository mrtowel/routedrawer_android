<?xml version="1.0" encoding="UTF-8"?>
<project name="module_locate" default="compile.module.locate">
  <dirname property="module.locate.basedir" file="${ant.file.module_locate}"/>
  
  <property name="module.jdk.home.locate" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.locate" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.locate" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.locate" value="${compiler.args}"/>
  
  <property name="locate.output.dir" value="${module.locate.basedir}/out/production/locate"/>
  <property name="locate.testoutput.dir" value="${module.locate.basedir}/out/test/locate"/>
  
  <path id="locate.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="locate.module.production.classpath">
    <path refid="${module.jdk.classpath.locate}"/>
    <path refid="library.com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.com.github.kevinsawicki:http-request:5.5.classpath"/>
    <pathelement location="${google-play-services_lib.output.dir}"/>
    <pathelement location="${basedir}/../sdk/extras/google/google_play_services/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <path refid="library.com.j256.ormlite:ormlite-android:4.45.classpath"/>
  </path>
  
  <path id="locate.runtime.production.module.classpath">
    <pathelement location="${locate.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.com.github.kevinsawicki:http-request:5.5.classpath"/>
    <path refid="google-play-services_lib.runtime.production.module.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-android:4.45.classpath"/>
  </path>
  
  <path id="locate.module.classpath">
    <path refid="${module.jdk.classpath.locate}"/>
    <pathelement location="${locate.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.com.github.kevinsawicki:http-request:5.5.classpath"/>
    <pathelement location="${google-play-services_lib.testoutput.dir}"/>
    <pathelement location="${google-play-services_lib.output.dir}"/>
    <pathelement location="${basedir}/../sdk/extras/google/google_play_services/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <path refid="library.com.j256.ormlite:ormlite-android:4.45.classpath"/>
  </path>
  
  <path id="locate.runtime.module.classpath">
    <pathelement location="${locate.testoutput.dir}"/>
    <pathelement location="${locate.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.com.github.kevinsawicki:http-request:5.5.classpath"/>
    <path refid="google-play-services_lib.runtime.module.classpath"/>
    <pathelement location="${basedir}/../sdk/extras/google/google_play_services/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <path refid="library.com.j256.ormlite:ormlite-android:4.45.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.locate">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.locate">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.locate"/>
  </patternset>
  
  <path id="locate.module.sourcepath">
    <dirset dir="${module.locate.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.locate" depends="compile.module.locate.production,compile.module.locate.tests" description="Compile module locate"/>
  
  <target name="compile.module.locate.production" depends="register.custom.compilers,compile.module.google-play-services_lib" description="Compile module locate; production classes">
    <mkdir dir="${locate.output.dir}"/>
    <javac2 destdir="${locate.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.locate}/javac">
      <compilerarg line="${compiler.args.locate}"/>
      <bootclasspath refid="locate.module.bootclasspath"/>
      <classpath refid="locate.module.production.classpath"/>
      <src refid="locate.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.locate"/>
    </javac2>
    
    <copy todir="${locate.output.dir}">
      <fileset dir="${module.locate.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.locate"/>
      </fileset>
      <fileset dir="${module.locate.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.locate"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.locate.tests" depends="register.custom.compilers,compile.module.locate.production" description="compile module locate; test classes" unless="skip.tests"/>
  
  <target name="clean.module.locate" description="cleanup module">
    <delete dir="${locate.output.dir}"/>
    <delete dir="${locate.testoutput.dir}"/>
  </target>
</project>